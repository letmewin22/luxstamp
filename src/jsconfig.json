{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
    }
  },
  "filesGlob": [
    "**/*.js",
    "!node_modules/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "baseUrl": "./",
  "compileOnSave": true,
  "atom": {
    "rewriteTsconfig": false
  }
}